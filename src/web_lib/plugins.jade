mixin Plugin(plugin)
    a.plugin(href='/plugins/info/' + plugin.Name + "/html")
        .title
            .icon
                img(src='/plugins/info/' + plugin.Name + '/img/icon.png')
            .name #{plugin.Name}
        .description #{plugin.ShortDescription}
        .preview
            img(src='/plugins/info/' + plugin.Name + '/img/preview/preview_1.jpg')
